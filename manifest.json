{
  "manifest_version": 3,
  "name": "YouTube Timelapser",
  "version": "1.0.0",
  "icons": {
    "32": "Public/Icons/icon32.png"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "html": "index.html",
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/contentscript.js"],
      "css": ["Public/styles.css"]
    }
  ]
}
